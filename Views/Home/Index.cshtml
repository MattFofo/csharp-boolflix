@using boolflix.Models.PlaylistFactory
@{
    ViewData["Title"] = "Home Page";
    Movie jumboCoverMovie = ViewData["JumboCover"] as Movie;
    List<Playlist> playlists = ViewData["Playlists"] as List<Playlist>;
}

@model Movie

<div class="jumbotron">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    <div class="card bg-dark text-white">
        <img src="https://picsum.photos/500/100" class="card-img" alt="...">
        <div class="card-img-overlay">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text">Last updated 3 mins ago</p>
            <a asp-controller="Movies" asp-action="Play" asp-route-movieId="@Model.Id" asp-route-profileId="1" class="btn btn-primary">Play</a>
        </div>
    </div>
    @{
        foreach (Playlist playlist in playlists)
        {
            <div class="row">
                <h2>@playlist.Title</h2>

                @foreach (Movie movie in playlist.VideoContents)
                {
                    <div class="card" style="width: 18rem;">
                      <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                      </div>
                    </div>
                }

            </div>            
        }
    }
</div>


